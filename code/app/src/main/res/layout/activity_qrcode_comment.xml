<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRCodeCommentActivity"
    android:padding="15dp"
    >

    <TextView
        android:paddingBottom="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#FFC107"
        android:id="@+id/textViewQRCodeId"
        />
    <View
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewQRCodeId"
        android:background="@android:color/background_dark"/>

    <TextView
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:id="@+id/textViewDisplayWorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@id/textViewQRCodeId"
        android:textSize="15dp" />

    <View
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewDisplayWorth"
        android:id="@+id/hLine"
        android:background="@android:color/background_dark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_comments"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/hLine"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/add_comments"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycle_view_comments"
         />

    <Button
        android:id="@+id/addButtonComments"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/recycle_view_comments"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/add_comments"
        android:onClick="storeComments"
        android:paddingLeft="20dp"
        android:text="Add"
        android:textSize="15dp" />

    <Button
        android:id="@+id/back_button_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_comments"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="23dp"
        android:paddingHorizontal="50dp"
        android:text="Back" />


</RelativeLayout>