<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoardActivity"
    android:padding="15dp"
    android:background="#C2FFF9">

    <Button
        android:id="@+id/backButtonLeaderBoard"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:text="Go Back"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_below="@+id/backButtonLeaderBoard"
        android:text="Your Estimate: "
        android:textColor="#CC1F1F"
        android:textSize="19dp"

       />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank By Score: "
        android:textSize="19dp"
        android:paddingTop="15dp"
         android:layout_below="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/editTextRankByScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXth"
        android:textSize="19dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:paddingTop="15dp"
        android:text="Rank By Number of Code Scanned: "
        android:textSize="19dp" />

    <TextView
        android:id="@+id/editTextRankByScanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:textSize="19dp"
        android:text="XXth"
        android:paddingTop="15dp"
        android:layout_toRightOf="@+id/textView2"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Players: "
        android:textColor="#CC1F1F"
        android:paddingTop="15dp"
        android:textSize="19dp"
        android:layout_below="@+id/editTextRankByScanned" />

    <EditText
        android:id="@+id/editTextSearchForPlayers"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_below="@+id/textView5"
        android:hint="Search for Player"
        android:paddingTop="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="409dp"
        android:layout_height="521dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/editTextSearchForPlayers" />


</RelativeLayout>